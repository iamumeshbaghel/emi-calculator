<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/nav_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginEnd="10.0dip"
            android:layout_marginBottom="10.0dip">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="52.0dip"
                android:layout_height="52.0dip"
                android:background="@drawable/ic_back_bg"
                android:padding="16dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppinssemibold"
                android:text="Mini Project"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="18.0sp" />
            <ImageView
                android:id="@+id/download"
                android:layout_width="52.0dip"
                android:layout_height="52.0dip"
                android:background="@drawable/ic_back_bg"
                android:padding="16dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/download" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nav_layout"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sen_regular"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Principle"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/principle_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal"
                        android:fontFamily="@font/sen_regular"
                        android:background="@color/offWhite"
                        android:ellipsize="end"
                        android:gravity="center|start"
                        android:hint="Amount"
                        android:textColorHint="@color/black"
                        android:nextFocusDown="@+id/etTMonth"
                        android:padding="10dp"
                        android:selectAllOnFocus="true"
                        android:textColor="@color/maintext"
                        android:textSize="15sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sen_regular"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/maintext"
                    android:layout_marginTop="10dp"
                    android:text="Interest"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/interest_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal"
                        android:fontFamily="@font/sen_regular"
                        android:background="@color/offWhite"
                        android:ellipsize="end"
                        android:gravity="center|start"
                        android:hint="Interest"
                        android:textColorHint="@color/black"
                        android:nextFocusDown="@+id/etTMonth"
                        android:padding="10dp"
                        android:selectAllOnFocus="true"
                        android:textColor="@color/maintext"
                        android:textSize="15sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sen_regular"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/maintext"
                    android:text="Loan tenure in years"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/years_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:fontFamily="@font/sen_regular"
                        android:background="@color/offWhite"
                        android:ellipsize="end"
                        android:gravity="center|start"
                        android:hint="Years"
                        android:textColorHint="@color/black"
                        android:nextFocusDown="@+id/etTMonth"
                        android:padding="10dp"
                        android:selectAllOnFocus="true"
                        android:textColor="@color/maintext"
                        android:textSize="15sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sen_regular"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/maintext"
                    android:text="Loan tenure in months"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/months_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:fontFamily="@font/sen_regular"
                        android:background="@color/offWhite"
                        android:ellipsize="end"
                        android:gravity="center|start"
                        android:hint="months"
                        android:textColorHint="@color/black"
                        android:nextFocusDown="@+id/etTMonth"
                        android:padding="10dp"
                        android:selectAllOnFocus="true"
                        android:textColor="@color/maintext"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/banner_wrapper"
                    android:orientation="horizontal" />
                <Button
                    android:id="@+id/calculate_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Calculate"
                    android:background="@drawable/btn_white"
                    android:fontFamily="@font/sen_regular"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/offWhite"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/status"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/sen_regular"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:lineSpacingExtra="3dp"
                            android:text="EMI"
                            android:textColor="@color/maintext"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/mainbg" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/emi"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="15dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/emi_textview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/sen_regular"
                                    android:gravity="center"
                                    android:text="₹XXXX"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="24sp" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@color/offWhite"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/mainbg" />
                    <RelativeLayout
                        android:id="@+id/total"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/sen_regular"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:lineSpacingExtra="3dp"
                            android:text="Total Payment(Principle + Interest)"
                            android:textColor="@color/maintext"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/mainbg" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/total_payment"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="15dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/total_payment_textview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/sen_regular"
                                    android:gravity="center"
                                    android:text="₹XXXX"
                                    android:textColor="@color/maintext"
                                    android:textSize="18sp" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/offWhite"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/mainbg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/principle"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="15dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sen_regular"
                                    android:gravity="center"
                                    android:text="Principle Amount"
                                    android:textStyle="bold"
                                    android:textColor="@color/maintext"
                                    android:textSize="15sp" />
                                <TextView
                                    android:id="@+id/total_principle_textview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:fontFamily="@font/sen_regular"
                                    android:textColor="@color/maintext"
                                    android:text="₹XXXX"
                                    android:layout_gravity="center_horizontal"
                                    />
                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:background="@color/mainbg" />

                        <LinearLayout
                            android:id="@+id/age"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="15dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sen_regular"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:text="Interest %"
                                    android:textColor="@color/maintext"
                                    android:textSize="15sp" />
                                <TextView
                                    android:id="@+id/total_interest"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:fontFamily="@font/sen_regular"
                                    android:textColor="@color/maintext"
                                    android:text="₹XXXX"
                                    android:layout_gravity="center_horizontal"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
